{
  "name": "marathon",
  "version": "0.1.0",
  "description": "Make career easy",
  "scripts": {
    "prepare": "husky install",
    "start": "concurrently \"node ./scripts/dev\" \"npm run json-server\"",
    "start:main": "cross-env NODE_ENV=development electron -r ts-node/register/transpile-only ./src/main/main.ts",
    "start:preload": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack --config ./scripts/common/webpack.config.preload.dev.js",
    "release": "npm run clean && node ./scripts/release",
    "pack": "npm run clean && node ./scripts/release --dir",
    "test": "jest",
    "clean": "rimraf ./release",
    "json-server": "json-server __json_server_mock__/db.json --watch --port 3001 --middlewares ./__json_server_mock__/middleware.js"
  },
  "keywords": [
    "electron",
    "webpack",
    "react"
  ],
  "author": {
    "name": "fujia",
    "email": "fujia.site@outlook.com"
  },
  "license": "MIT",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{tsx,ts}": "eslint",
    "*.{css,scss}": "stylelint",
    "*.{tsx,ts,scss}": "prettier"
  },
  "devDependencies": {
